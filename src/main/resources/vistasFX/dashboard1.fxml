<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iestpdj.iestpdjpagos.controller.DashbordController1"
            prefWidth="1000.0" prefHeight="700.0">

    <!-- ======== PANEL IZQUIERDO (MENÚ LATERAL) ======== -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER"
              style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);
                     -fx-padding: 25;
                     -fx-pref-width: 220;">

            <!-- TÍTULO / LOGO -->
            <Label text="IESTP DJ Pagos"
                   style="-fx-text-fill: #ecf0f1;
                          -fx-font-size: 20px;
                          -fx-font-weight: bold;
                          -fx-padding: 10 0 20 0;" />

            <Separator style="-fx-background-color: #7f8c8d;" prefWidth="180"/>

            <!-- BOTONES DEL MENÚ -->
            <Button fx:id="btnEstudiante"
                    onAction="#mostrarEstudiante"
                    text="👨‍ Estudiantes"
                    styleClass="menu-button"/>

            <Button fx:id="btnPagos"
                    onAction="#mostrarPagos"
                    text="💰 Pagos"
                    styleClass="menu-button"/>

            <Button fx:id="btnConceptoPago"
                    onAction="#mostrarConceptoPago"
                    text="📄 Conceptos de Pago"
                    styleClass="menu-button"/>
            <Button fx:id="btnMetodoPago"
                    onAction="#mostrarMetodoPago"
                    text="Metodo Pago"
                    styleClass="menu-button"
                    />

            <Button fx:id="btnSalir"
                    onAction="#cerrarSesion"
                    text="🚪 Salir"
                    styleClass="menu-button-exit"/>
        </VBox>
    </left>

    <!-- ======== PANEL CENTRAL ======== -->
    <center>
        <StackPane fx:id="contentArea" alignment="CENTER"
                   style="-fx-background-color: #ecf0f1;
                          -fx-padding: 30;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 0 0 0 1;">
            <Label text="Bienvenido al Sistema de Pagos"
                   style="-fx-font-size: 22px; -fx-text-fill: #2c3e50;"/>
        </StackPane>
    </center>

</BorderPane>
