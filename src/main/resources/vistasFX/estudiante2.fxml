<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.iestpdj.iestpdjpagos.controller.EstudianteController">
    <VBox prefHeight="800" prefWidth="1200" spacing="10">
        <!-- Barra superior -->
        <HBox alignment="CENTER_RIGHT" spacing="5" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Region HBox.hgrow="ALWAYS" /> <!-- Empuja los botones a la derecha -->
            <Button fx:id="btnMaximizar" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand;" text="⛶" />
            <Button fx:id="btnCerrar" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand;" text="✖" />
        </HBox>
        <VBox>
            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Gestion de Estudiante" />
            <HBox spacing="8">
                <Button fx:id="nuevoEstudiante" onAction="#nuevoEstudiante" text="Nuevo" />
                <Button text="Editar" />
                <Button text="Eliminar" />
                <Button text="Refrescar" />
            </HBox>
            <TableView prefHeight="661.0" prefWidth="1200.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colCodigo" prefWidth="100" text="Código" />
                    <TableColumn fx:id="colDni" prefWidth="90" text="DNI" />
                    <TableColumn fx:id="colNombres" prefWidth="150" text="Nombres" />
                    <TableColumn fx:id="colApellidos" prefWidth="150" text="Apellidos" />
                    <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
                    <TableColumn fx:id="colTelefono" prefWidth="100" text="Teléfono" />
                    <TableColumn fx:id="colFecha" prefWidth="160" text="Fecha Registro" />
                </columns>
            </TableView>
        </VBox>
    </VBox>

</AnchorPane>
