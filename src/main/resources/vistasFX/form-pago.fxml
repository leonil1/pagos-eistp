<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iestpdj.iestpdjpagos.controller.PagosController"
            stylesheets="@pago.css">

    <!-- HEADER -->
    <top>
        <VBox styleClass="header-container">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="ðŸ’°" style="-fx-font-size: 32px;"/>
                <VBox>
                    <Label text="SISTEMA DE PAGOS" styleClass="title"/>
                    <Label text="Registro de Pagos y GeneraciÃ³n de Boletas" styleClass="subtitle"/>
                </VBox>
            </HBox>

            <Separator style="-fx-background-color: #e0e0e0;">
                <VBox.margin>
                    <Insets top="15"/>
                </VBox.margin>
            </Separator>
        </VBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox spacing="20">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>

                <!-- SECCIÃ“N 1: DATOS DEL ESTUDIANTE -->
                <VBox styleClass="section-container">
                    <Label text="1. DATOS DEL ESTUDIANTE" styleClass="section-title"/>

                    <GridPane hgap="15" vgap="15">
                        <padding>
                            <Insets top="15"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="120" prefWidth="120"/>
                            <ColumnConstraints minWidth="200" prefWidth="200"/>
                            <ColumnConstraints minWidth="150" prefWidth="150"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <!-- Fila 1: DNI -->
                        <Label text="DNI:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtDNI" promptText="Ingrese DNI (8 dÃ­gitos)"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                                   styleClass="text-field"/>
                        <Button fx:id="btnBuscar" text="ðŸ” Buscar" onAction="#buscarEstudiante"
                                styleClass="btn-primary" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <font>
                                <Font name="System Bold" size="13"/>
                            </font>
                        </Button>

                        <!-- Fila 2: Nombre Completo -->
                        <Label text="Nombre Completo:" styleClass="field-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtNombreEstudiante" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"
                                   styleClass="text-field-readonly"/>

                        <!-- Fila 3: Email y TelÃ©fono -->
                        <Label text="Email:" styleClass="field-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtEmailEstudiante" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"
                                   styleClass="text-field-readonly"/>

                        <Label text="TelÃ©fono:" styleClass="field-label"
                               GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtTelefonoEstudiante" editable="false"
                                   GridPane.columnIndex="3" GridPane.rowIndex="2"
                                   styleClass="text-field-readonly"/>
                    </GridPane>
                </VBox>

                <!-- SECCIÃ“N 2: AGREGAR CONCEPTOS -->
                <VBox styleClass="section-container">
                    <Label text="2. AGREGAR CONCEPTOS DE PAGO" styleClass="section-title"/>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <padding>
                            <Insets top="15"/>
                        </padding>

                        <Label text="Concepto:" styleClass="field-label"/>
                        <ComboBox fx:id="cboConceptos" promptText="Seleccione un concepto"
                                  prefWidth="350" styleClass="combo-box"/>

                        <Label text="Cantidad:" styleClass="field-label">
                            <HBox.margin>
                                <Insets left="20"/>
                            </HBox.margin>
                        </Label>
                        <Spinner fx:id="spnCantidad" prefWidth="100" editable="true"
                                 styleClass="spinner"/>

                        <Button fx:id="btnAgregar" text="âž• Agregar Concepto"
                                onAction="#agregarConcepto" styleClass="btn-success">
                            <HBox.margin>
                                <Insets left="20"/>
                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="13"/>
                            </font>
                        </Button>
                    </HBox>
                </VBox>

                <!-- SECCIÃ“N 3: TABLA DE DETALLES -->
                <VBox styleClass="section-container" VBox.vgrow="ALWAYS">
                    <Label text="3. DETALLE DEL PAGO" styleClass="section-title"/>

                    <TableView fx:id="tblDetalles" styleClass="table-view" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets top="15"/>
                        </VBox.margin>

                        <columns>
                            <TableColumn text="Concepto" prefWidth="400"
                                         style="-fx-alignment: CENTER-LEFT;"/>
                            <TableColumn text="Cantidad" prefWidth="100"
                                         style="-fx-alignment: CENTER;"/>
                            <TableColumn text="Precio Unitario" prefWidth="150"
                                         style="-fx-alignment: CENTER-RIGHT;"/>
                            <TableColumn text="Subtotal" prefWidth="150"
                                         style="-fx-alignment: CENTER-RIGHT;"/>
                            <TableColumn text="Acciones" prefWidth="120"
                                         style="-fx-alignment: CENTER;"/>
                        </columns>

                        <placeholder>
                            <VBox alignment="CENTER" spacing="10">
                                <Label text="ðŸ“‹" style="-fx-font-size: 48px; -fx-opacity: 0.3;"/>
                                <Label text="No hay conceptos agregados"
                                       style="-fx-font-size: 14px; -fx-text-fill: #999999;"/>
                                <Label text="Seleccione conceptos y haga clic en 'Agregar Concepto'"
                                       style="-fx-font-size: 12px; -fx-text-fill: #cccccc;"/>
                            </VBox>
                        </placeholder>
                    </TableView>
                </VBox>

                <!-- SECCIÃ“N 4: MÃ‰TODO DE PAGO Y OBSERVACIONES -->
                <VBox styleClass="section-container">
                    <Label text="4. INFORMACIÃ“N DEL PAGO" styleClass="section-title"/>

                    <GridPane hgap="15" vgap="15">
                        <padding>
                            <Insets top="15"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="120" prefWidth="120"/>
                            <ColumnConstraints minWidth="250" prefWidth="250"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="MÃ©todo de Pago:" styleClass="field-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="cboMetodoPago" promptText="Seleccione mÃ©todo de pago"
                                  GridPane.columnIndex="1" GridPane.rowIndex="0"
                                  prefWidth="250" styleClass="combo-box"/>

                        <Label text="Observaciones:" styleClass="field-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="1"
                               GridPane.valignment="TOP">
                            <GridPane.margin>
                                <Insets top="5"/>
                            </GridPane.margin>
                        </Label>
                        <TextArea fx:id="txtObservaciones" promptText="Observaciones opcionales..."
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"
                                  GridPane.columnSpan="2"
                                  prefRowCount="3" wrapText="true"
                                  styleClass="text-area"/>
                    </GridPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- FOOTER: TOTALES Y BOTONES -->
    <bottom>
        <VBox styleClass="footer-container">
            <Separator style="-fx-background-color: #e0e0e0;"/>

            <HBox alignment="CENTER_RIGHT" spacing="30">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>

                <!-- TOTAL -->
                <HBox spacing="15" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <Label text="TOTAL A PAGAR:" styleClass="total-label">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Label>

                    <Label fx:id="lblTotal" text="S/ 0.00" styleClass="total-amount">
                        <font>
                            <Font name="System Bold" size="24"/>
                        </font>
                    </Label>
                </HBox>

                <!-- BOTONES -->
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button fx:id="btnLimpiar" text="ðŸ—‘ï¸ Limpiar" onAction="#limpiarFormulario"
                            styleClass="btn-secondary" prefWidth="130">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Button>

                    <Button fx:id="btnProcesar" text="âœ“ Procesar Pago" onAction="#procesarPago"
                            styleClass="btn-success-large" prefWidth="180">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Button>
                </HBox>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
